@model Wiki.VV_Position

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Редактировать</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)
    @Html.HiddenFor(model => model.id_VVPZ)
    @Html.HiddenFor(model => model.numMesto)

    Габарит
    @Html.EditorFor(model => model.Gabarit, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.Gabarit, "", new { @class = "text-danger" })

    Масса (брутто)
    @Html.EditorFor(model => model.massaBrutto, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.massaBrutto, "", new { @class = "text-danger" })

    Масса (нетто)
    @Html.EditorFor(model => model.massaNetto, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.massaNetto, "", new { @class = "text-danger" })


    Прим.
    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })

    <hr />

    <input type="submit" value="Сохранить" class="btn btn-info" />

</div>
}