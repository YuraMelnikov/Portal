@model Wiki.Models.RegisterViewModel
@{
    /**/

    ViewBag.Title = "Register";
}

<h2>Регистрация</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Создать новую учетную запись</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <h4>Роль пользователя</h4>
    @Html.DropDownListFor(m => m.RoleName, new SelectList(ViewBag.Roles, "Value", "Text"), new { @class = "form-control" })
    <h4>Имя учетной записи</h4>
    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })

    <h4>Пароль</h4>
    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
    <h4>Подтвердить пароль</h4>
    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Зарегестрировать" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
