@model IEnumerable<Wiki.Devision>
@{
    ViewBag.Title = "Index";
}
<h2>Devision</h2>
<span>
    @Html.ActionLink("Добавить", "Create", null, new { @class = "btn btn-success" })
</span>
<h3></h3>
<table class="table-striped">
    <tr>
        <th>&emsp; Наименование отдела &emsp;</th>
        <th>&emsp; Редакртирование &emsp;</th>
    </tr>
@foreach (var item in Model)
{
    <tr>
        <td>
        &emsp;
            @Html.DisplayFor(modelItem => item.name)
        &emsp;
        </td>
        <td>&emsp;
                @Html.ActionLink("Редактирование", "Edit", new { id = item.id})
                @Html.ActionLink("Удалить", "Delete", new { id = item.id})
                &emsp;
        </td>
    </tr>
}
</table>
<h3></h3>
<p><a href="~/Admin/Index" class="btn btn-primary" role="button">Back to admin panel</a></p>