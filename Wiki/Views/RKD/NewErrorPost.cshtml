            @Html.HiddenFor(model => model.id_RKD_Version)
            @Html.HiddenFor(model => model.dateUpload)
            @Html.HiddenFor(model => model.userUpload)

            <br />
            <p>Выберете тип замечания</p>
            @Html.ListBox("TypeErrorList", ViewBag.id_PlanZakaz1 as MultiSelectList, new { @class = "chosen-select" })
            <br />
            <p>Примечание</p>
            @Html.TextAreaFor(model => model.description, new { @class = "form-control", @cols = 1400, @rows = 5 })
            <br />
            <br />
            <p><input type="submit" value="Сохранить" class="btn btn-success" /></p>

        }
    </div>

