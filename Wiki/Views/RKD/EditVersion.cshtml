@model Wiki.RKD_Version

<head>
    <link href="~/Content/jquery-ui-1.12.1.custom/jquery-ui.css" rel="stylesheet" />
    <link href="~/Scripts/select2-3.5.4/select2.css" rel="stylesheet" />
    <link href="~/Content/MelnikauCSS.css" rel="stylesheet" />
    <script src="~/Content/jquery-ui-1.12.1.custom/jquery-ui.js"></script>
    <script src="~/Content/jquery-ui-1.12.1.custom/external/jquery/jquery.js"></script>
    <script src="~/Scripts/select2-3.5.4/select2.js"></script>
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/moment.js"></script>
    <script src="~/Scripts/moment-with-locales.js"></script>
    <script src="~/Scripts/moment-with-locales.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-datetimepicker.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
</head>
<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.id_RKD_Order)
        @Html.HiddenFor(model => model.numberVersion)
        @Html.HiddenFor(model => model.dateUpload)
        @Html.HiddenFor(model => model.dateUploadClient)
        @Html.HiddenFor(model => model.datePost)
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <p>Укажите дату получения РКД от КО</p>
        @Html.EditorFor(model => model.customdateUpload, new { htmlAttributes = new { @class = "form-control" } })
        <br />
        <p>Укажите дату отправки РКД Заказчику</p>
        @Html.EditorFor(model => model.customdateUploadClient, new { htmlAttributes = new { @class = "form-control" } })
        <br />
        <br />
        <p><input type="submit" value="Сохранить" class="btn btn-success" /></p>

    }
</div>

<script type="text/javascript">
    $(function () {
        $('#customdateUpload').datetimepicker({
            locale: 'ru',
            format: 'L',
            calendarWeeks: true,
            showTodayButton: true
        });
    });
</script>

<script type="text/javascript">
    $(function () {
        $('#customdateUploadClient').datetimepicker({
            locale: 'ru',
            format: 'L',
            calendarWeeks: true,
            showTodayButton: true
        });
    });
</script>