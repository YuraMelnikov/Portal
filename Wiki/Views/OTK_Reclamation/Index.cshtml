@model IEnumerable<Wiki.OTK_Reclamation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Чек-лист</h2>

<span>
    @Html.ActionLink("Добавить запись", "Create", null, new { @class = "btn btn-success" })
</span>
<h3></h3>

<div>
    <table class="table table-striped table-bordered table-hover table-condensed">
        <tr>
            <th> № замечания </th>
            <th> Тип </th>
            <th> Закрыта </th>
            <th> Рекламация </th>
            <th> Прим. </th>
            <th> Создана </th>
            <th> Кем создана </th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td> @Html.DisplayFor(modelItem => item.Id) </td>
                <td> @Html.DisplayFor(modelItem => item.OTK_TypeReclamation.Name) </td>
                <td> @Html.DisplayFor(modelItem => item.Complited) </td>
                <td> @Html.DisplayFor(modelItem => item.ReclamationText) </td>
                <td> @Html.DisplayFor(modelItem => item.Description) </td>
                <td> @Html.DisplayFor(modelItem => item.DateTimeCreate) </td>
                <td> @Html.DisplayFor(modelItem => item.AspNetUsers.CiliricalName) </td>
            </tr>
        }
    </table>
</div>
