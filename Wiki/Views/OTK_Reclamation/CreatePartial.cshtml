@model Wiki.OTK_Reclamation
@{
    Layout = null;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <div class="row">
            <div class="col-sm-6 bg-success">
                <h3> Добавить замечание</h3>
                <hr />
                <h1></h1>

                <label>Текст замечания</label>
                @Html.TextAreaFor(model => model.ReclamationText, new { @class = "form-control", @cols = 1400, @rows = 5 })
                <h4></h4>
                <label>Тип замечания</label>
                @Html.DropDownList("TypeReclamation", null, htmlAttributes: new { @class = "form-control" })
                <h4></h4>
                <label>Прим.</label>
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                <h4></h4>
                <label>Время затраченное на выявление неисправности, ч</label>
                @Html.EditorFor(model => model.LaborCostOTK, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.LaborCostOTK, "", new { @class = "text-danger" })
                @*<h4></h4>
                    <label>Время устранения неисправности, ч</label>
                    @Html.EditorFor(model => model.LaborCostManufacturing, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LaborCostManufacturing, "", new { @class = "text-danger" })*@
                <h4></h4>
                <label>Отдел, которому направляется замечание</label>
                @Html.DropDownList("Devision", null, htmlAttributes: new { @class = "form-control" })


                @*@Html.ListBox("Devision", ViewBag.Devision as MultiSelectList, new { @class = "chosen-select" })*@

                <h4></h4>
                <label>Исправлено/ НЕ исправлено</label>
                @Html.EditorFor(model => model.Complited)


                <h1></h1>
                <input type="submit" value="Сохранить" class="btn btn-success" />
                @Html.ActionLink("Назад", "IndexCheckList", new { id = (object)ViewBag.CheckList.id }, new { @class = "btn btn-danger", @style = "color:white" })
                <br />
                <br />
                <br />
            </div>

        </div>
    </div>

}

<script src="@Url.Content("~/Content/Chosen/chosen.jquery.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/Chosen/chosen.css")" rel="stylesheet" type="text/css" />

<script>
    $(".chosen-select").chosen({ allow_single_deselect: true, disable_search_threshold: 5, width: "100%" });
</script>
