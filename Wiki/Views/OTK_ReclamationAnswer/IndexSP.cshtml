@model IEnumerable<Wiki.OTK_ReclamationAnswer>

@{
    ViewBag.Title = "IndexSP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Замечания в работе</h2>
<table class="table table-striped table-bordered table-hover table-condensed" align="center" style="width:1500px">
    <tr>
        <th width="10"> Заказ </th>
        <th width="300"> Замечание </th>
        <th width="150"> Прим. </th>
        <th width="300"> Ответ </th>
        <th width="10"> Создано </th>
        <th width="10"> СП </th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.Text == "")
        {
            <tr class="warning">
                <td> @Html.DisplayFor(modelItem => item.OTK_Reclamation.OTK_ChaeckList.PZ_PlanZakaz.PlanZakaz) </td>
                <td> @Html.DisplayFor(modelItem => item.OTK_Reclamation.ReclamationText) </td>
                <td> @Html.DisplayFor(modelItem => item.OTK_Reclamation.Description) </td>
                <td> @Html.DisplayFor(modelItem => item.Text) </td>
                <td> @item.OTK_Reclamation.DateTimeCreate.ToString().Substring(0, 10) </td>
                <td> @Html.DisplayFor(modelItem => item.OTK_Reclamation.Devision1.name) </td>
            </tr>
        }
        else
        {
            <tr>
                <td> @Html.DisplayFor(modelItem => item.OTK_Reclamation.OTK_ChaeckList.PZ_PlanZakaz.PlanZakaz) </td>
                <td> @Html.DisplayFor(modelItem => item.OTK_Reclamation.ReclamationText) </td>
                <td> @Html.DisplayFor(modelItem => item.OTK_Reclamation.Description) </td>
                <td> @Html.DisplayFor(modelItem => item.Text) </td>
                <td> @item.OTK_Reclamation.DateTimeCreate.ToString().Substring(0, 10) </td>
                <td> @Html.DisplayFor(modelItem => item.OTK_Reclamation.Devision1.name) </td>
            </tr>
        }
    }
</table>

@Html.ActionLink("Назад", "Index", "OTK_ChaeckList", null, new { @class = "btn btn-primary" })