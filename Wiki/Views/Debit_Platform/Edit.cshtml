@model Wiki.Debit_Platform

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Информация по платформе</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.id)
    @Html.HiddenFor(model => model.id_PlanZakaz)
    
    Вес, кг
    @Html.EditorFor(model => model.massa, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.massa, "", new { @class = "text-danger" })

    Количество платформ
    @Html.EditorFor(model => model.countPlatform, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.countPlatform, "", new { @class = "text-danger" })


    Номера платформ
    @Html.TextAreaFor(model => model.numPlatform, new { @class = "form-control", @cols = 1400, @rows = 5 })
    @Html.ValidationMessageFor(model => model.numPlatform, "", new { @class = "text-danger" })

    Номера пломб
    @Html.TextAreaFor(model => model.numPlomb, new { @class = "form-control", @cols = 1400, @rows = 5 })
    @Html.ValidationMessageFor(model => model.numPlomb, "", new { @class = "text-danger" })

    Габариты
    @Html.TextAreaFor(model => model.gabar, new { @class = "form-control", @cols = 1400, @rows = 5 })
    @Html.ValidationMessageFor(model => model.gabar, "", new { @class = "text-danger" })

    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить" class="btn btn-default" />
        </div>
    </div>
</div>
}
