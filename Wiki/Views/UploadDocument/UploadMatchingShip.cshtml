@{
    ViewBag.Title = "UploadGraphic";
}
<h3>Выберите файл для загрузки</h3>
@using (Html.BeginForm("UploadMatchingShip", "UploadDocument", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <h5>Укажите заказы по которым загруждается разрешение на отгрузку</h5>
    <hr />
    <h4>Введите №заказа/ов</h4>
    @Html.ListBox("PlanZakaz", ViewBag.id_PlanZakaz as MultiSelectList, new { @class = "chosen-select" })
    <br />
    <h4>Тип согласования</h4>
    @Html.DropDownList("tipe", null, htmlAttributes: new { @class = "form-control" })
    <hr />
    <input type="file" name="upload" /><br>
    <input type="submit" value="Загрузить" />
}
<script src="@Url.Content("~/Content/Chosen/chosen.jquery.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/Chosen/chosen.css")" rel="stylesheet" type="text/css" />

<script>
    $(".chosen-select").chosen({ allow_single_deselect: true, disable_search_threshold: 5, width: "100%" });
</script>
