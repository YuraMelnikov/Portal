@model Wiki.OTK_ReclamationKO

@{
    ViewBag.Title = "CreatePO";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Написать рекламацию</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    <label>Заказ</label>
    @Html.DropDownList("order", null, htmlAttributes: new { @class = "form-control" })
    <h4></h4>
    <label>Тип рекламации</label>
    @Html.DropDownList("typeReclamation", null, htmlAttributes: new { @class = "form-control" })
    <h4></h4>
    <label>Текст замечания</label>
    @Html.TextAreaFor(model => model.textReclamation, new { @class = "form-control", @cols = 1400, @rows = 5 })
    <h4></h4>
    <label>Ответственный</label>
    @Html.DropDownList("userError", null, htmlAttributes: new { @class = "form-control" })
    <h4></h4>
    Затраченое время на исправление
    @Html.EditorFor(model => model.time, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.time, "", new { @class = "text-danger" })
    <h1></h1>
    <input type="submit" value="Сохранить" class="btn btn-success" />
    @Html.ActionLink("Отменить", "Index", "ReclamationPO", null, new { @class = "btn btn-danger" })
</div>
}
