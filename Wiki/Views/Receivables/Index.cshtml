@model Wiki.Models.ReceivablesList
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutReceivables.cshtml";
}

<head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.11.0/bootstrap-table.min.css" rel="stylesheet" />
    <style>
        .container {
            width: 1600px;
        }

        th {
            background: #000080; /* Цвет фона строки заголовка */
            color: #ffe; /* Цвет текста */
            text-align: left; /* Выравнивание по левому краю */
            font-family: Arial, Helvetica, sans-serif; /* Выбор гарнитуры */
            font-size: 0.9em; /* Размер текста */
        }
    </style>
</head>
<div class="container">
    <table data-toggle="table"
           data-height="750">
        <thead>
            <tr class="something">
                <th class="col-md-1">Ред.</th>
                <th data-sortable="true" class="col-md-1">Номер заказа</th>
                <th data-sortable="true" class="col-md-6">Менеджер заказа</th>
                <th data-sortable="true" class="col-md-6">Заказчик</th>
                <th data-sortable="true" class="col-md-4">Фактическая дата отгрузки</th>
                <th data-sortable="true" class="col-md-4">Номер с/ф</th>
                <th class="col-md-2">Фактическая дата доставки</th>
                <th class="col-md-2">Договорная дата поставки</th>
                <th class="col-md-2">Наличие претензий на входном контроле</th>
                <th class="col-md-3">Дата получения претензии</th>
                <th class="col-md-3">Дата закрытия претензии</th>
            </tr>
        </thead>
        <tbody id="myTable">
            @foreach (var item in Model.List)
            {
            <tr>
                <td class="col-md-1">См.</td>
                <td class="col-md-1">@item.Debit_WorkBit.PZ_PlanZakaz.PlanZakaz</td>
                <td data-sortable="true" class="col-md-1">@item.Debit_WorkBit.PZ_PlanZakaz.AspNetUsers.CiliricalName</td>
                <td data-sortable="true" class="col-md-6">@item.Debit_WorkBit.PZ_PlanZakaz.PZ_Client.NameSort</td>
                <td data-sortable="true" class="col-md-6">@item.Debit_WorkBit.PZ_PlanZakaz.dataOtgruzkiBP.Value</td>
                <td data-sortable="true" class="col-md-4">@item.Debit_WorkBit.Debit_TN.First().numberSF</td>
                <td data-sortable="true" class="col-md-4">@item.Debit_WorkBit.PostAlertShip.First().datePost</td>
                <td class="col-md-2">@item.Debit_WorkBit.PZ_PlanZakaz.DateShipping</td>
                <td class="col-md-2">@item.Recl.id</td>
                <td class="col-md-2">@item.Recl.DateOpenReclamation</td>
                <td class="col-md-3">@item.Recl.DateCloseReclamation</td>


            </tr>
            }
        </tbody>
    </table>
</div>



