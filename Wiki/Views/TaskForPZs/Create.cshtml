@model Wiki.TaskForPZ

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Добавить задание на открытие заказа</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        Наименование задачи
        <div class="col-md-10">
            @Html.EditorFor(model => model.taskName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.taskName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Ответственный сотрудник за выполнение задачи
        <div class="col-md-10">
            @Html.DropDownList("id_User", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.id_User, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Шаг выполнения
        <div class="col-md-10">
            @Html.EditorFor(model => model.step, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.step, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        Время на выполнение
        <div class="col-md-10">
            @Html.EditorFor(model => model.time, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.time, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Добавить" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Назад к списку задач", "Index")
</div>
