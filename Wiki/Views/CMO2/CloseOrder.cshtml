@model Wiki.CMO_Order
@{
    ViewBag.Title = "StartFirstTender";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Html.HiddenFor(model => model.id)
<h3>Зафиксировать приход железа</h3>
№ заявки: @ViewBag.Order
<br />
Дата и время создания заявки: @ViewBag.DateTimeCreate
<br />
Сотрудник разместивший заявку: @ViewBag.UserCreate
<br />
<br />
@Html.ActionLink("Отменить", "ViewStartMenuOS", null, new { @class = "btn btn-danger" })
<hr />
<div style="width: 1000px">
    Описание заявки:
    @foreach (var person1 in @ViewBag.OrderDescription)
    {
        @person1.planZakaz;
        <nobr> - </nobr>
        @person1.typeProduct;
    }
</div>
<hr />
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.id)
    @Html.HiddenFor(model => model.dateCreate)
    @Html.HiddenFor(model => model.userCreate)
    @Html.HiddenFor(model => model.firstTenderStart)
    @Html.HiddenFor(model => model.datetimeFirstTenderFinish)
    @Html.HiddenFor(model => model.userFirstTenderStart)
    @Html.HiddenFor(model => model.folder)
    @Html.HiddenFor(model => model.idTime)
    @Html.HiddenFor(model => model.datetimeSecondTenderFinish)
    @Html.HiddenFor(model => model.datetimeWinTenderFinish)
    @Html.HiddenFor(model => model.companyWin)
    <div class="row">
        <div class="col-md-6">
            <h4>Укажите дату прихода</h4>
            @Html.EditorFor(model => model.dateCloseOrder, new { htmlAttributes = new { @class = "form-control" } })
            <hr />
            <input type="submit" value="Сохранить" class="btn btn-success" />
        </div>
    </div>
}
<script type="text/javascript">
    $(function () {
        $('#dateCloseOrder').datetimepicker({
            locale: 'ru',
            format: 'L',
            calendarWeeks: true,
            showTodayButton: true
        });
    });
</script>