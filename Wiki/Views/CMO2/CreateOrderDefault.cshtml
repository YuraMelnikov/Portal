@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<h2>Оформить дозаказ железа</h2>
@using (Html.BeginForm("CreateOrderDefault", "CMO2", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <hr />
    <div class="form-horizontal">
        <h4>Введите №заказа/ов</h4>
        @Html.ListBox("PlanZakaz", ViewBag.id_PlanZakaz as MultiSelectList, new { @class = "chosen-select" })
        <hr />
        <h4>Выберете подрядчика</h4>
        @Html.ListBox("CMO_Company1", ViewBag.CMO_Company as MultiSelectList, new { @class = "chosen-select" })
        <hr />
        <form action="/CMO2/CreateOrderDefault" enctype="multipart/form-data" method="post">
            <label>Загрузка файлов:</label>
            <input accept="file/*" id="File1" multiple="multiple" name="File1" type="file" />
            <br />
            <input type="submit" value="Отправить" />
        </form>
        <hr />
        @Html.ActionLink("Отменить", "Index", null, new { @class = "btn btn-danger" })
    </div>
}
<script src="@Url.Content("~/Content/Chosen/chosen.jquery.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/Chosen/chosen.css")" rel="stylesheet" type="text/css" />
<script>
    $(".chosen-select").chosen({
        placeholder_text_multiple: "Нажмите для выбора...",
        allow_single_deselect: true, disable_search_threshold: 5, width: "100%"
    });
</script>
</body>
</html>