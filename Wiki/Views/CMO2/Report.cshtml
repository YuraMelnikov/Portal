                                {
                                    <p style="color:#f5f5f5 !important;">
                                        @item.PositionOrder
                                    </p>
                                }
                            </td>
                            <td>
                                @try
                                {
                                    @item.CompanyName
                                }
                                catch
                                {
                                    <p></p>
                                }
                            </td>
                            <td>
                                @try
                                {
                                    <p style="text-align:right; margin:0; padding:0">@item.Cost_FT.Value.ToString("##,##", new System.Globalization.NumberFormatInfo() { NumberGroupSeparator = "  " })</p>
                                }
                                catch
                                {
                                    <p></p>}
                            </td>
                            @*<td>
                                @try
                                {
                                    <p style="text-align:right; margin:0; padding:0">
