                                }
                            </td>
                            <td>
                                @if (item.Day_WT != null)
                                {
                                    try
                                    {
                                        <p style="text-align:center; margin:0; padding:0">
                                            @item.DateStartWork.ToString().Substring(0, 10)
                                        </p>
                                    }
                                    catch
                                    {
                                        <p></p>}
                                }
                                else
                                {
                                    <p></p>
                                }
                            </td>
                            <td>
                                @if (item.Day_WT != null)
                                {
                                    try
                                    {
                                        <p style="text-align:center; margin:0; padding:0">
                                            @item.PlanFinishWork2.ToString().Substring(0, 10)
                                        </p>
                                    }
                                    catch
                                    {
                                        <p></p>}
                                }
                                else
