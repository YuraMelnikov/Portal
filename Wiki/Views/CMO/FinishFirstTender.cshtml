@model Wiki.CMO_Order
@Html.HiddenFor(model => model.id)
@{
    ViewBag.Title = "FinishFirstTender";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Подведение результатов 1 круга торгов / запуск 2 круга</h3>
№ заявки: @ViewBag.numOrder
<br />
Дата и время создания заявки: @ViewBag.DateTimeCreate
<br />
Сотрудник разместивший заявку: @ViewBag.UserCreate
<br />
<br />
@Html.ActionLink("Отменить", "ViewStartMenuOS", null, new { @class = "btn btn-danger" })
<hr />
<div style="width:1000px">
    Описание заявки:
    @foreach (var person1 in @ViewBag.OrderDescription)
    {
        @person1.planZakaz;
        <nobr> - </nobr>
        @person1.typeProduct;
    }
</div>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-md-4 mb-3">
            <p>Укажите дату и время крайнего срока предоставления ответа</p>
            @Html.EditorFor(model => model.dateCreate, new { htmlAttributes = new { @class = "form-control" } })

            <hr />
            <input type="submit" value="Сохранить" class="btn btn-success" />
            <br />
            <br />

            <table class="table table-dark">
                <thead>
                    <tr>
                        <th width="100"> Подрядчик </th>
                        <th width="100"> Стоимость </th>
                        <th width="100"> Время изготовления </th>
                        <th width="100"> Ред. </th>
                    </tr>
                </thead>
                <tbody id="myTable">
                    @foreach (var person in ViewBag.tableResult)
                    {
                        <tr>
                            <td>@person.CMO_Company.name</td>
                            <td>@person.cost</td>
                            <td>@person.day</td>
                            <td>@Html.ActionLink("Ред.", "EditUploadResult", "CMO", new { id = person.id }, new { @class = "viewDialog", data_dialog_title = "Загрузить данные" })</td>
                            @*<td>@Html.ActionLink("Ред.", "EditUploadResult", "CMO", new { id = person.id }, null) </td>*@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
<script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")' type="text/javascript"></script>
<script>
    $(document).ready(function () {
        $.ajaxSetup({ cache: false });
        $(".viewDialog").on("click", function (e) {
            e.preventDefault();
            $("<div></div>")
                .addClass("dialog")
                .appendTo("body")
                .dialog({
                    title: $(this).attr("data-dialog-title"),
                    close: function () { $(this).remove() },
                    width: 1200,
                    height: 700,
                    modal: true
                })
                .load(this.href);
        });
    });
</script>
<script type="text/javascript">
    $(function () {
        $('#dateCreate').datetimepicker({
            locale: 'ru',
            //format: 'L',
            calendarWeeks: true,
            showTodayButton: true
        });
    });
</script>