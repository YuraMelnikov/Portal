@model Wiki.CMO_Order
@{
    ViewBag.Title = "AppDefaultOrder";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Введите ориентировочную дату получения дозаказа:</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)
        @Html.HiddenFor(model => model.dateCreate)
        @Html.HiddenFor(model => model.userCreate)
        @Html.HiddenFor(model => model.firstTenderStart)
        @Html.HiddenFor(model => model.userFirstTenderStart)
        @Html.HiddenFor(model => model.folder)
        @Html.HiddenFor(model => model.idTime)
        @Html.HiddenFor(model => model.datetimeSecondTenderFinish)
        @Html.HiddenFor(model => model.datetimeWinTenderFinish)
        @Html.HiddenFor(model => model.companyWin)
        @Html.HiddenFor(model => model.dateCloseOrder)
        <div class="row">
            <div class="col-md-6">
                <h4>Укажите дату ожидаемого прихода</h4>
                @Html.EditorFor(model => model.datetimeFirstTenderFinish, new { htmlAttributes = new { @class = "form-control" } })
                <hr />
                <input type="submit" value="Сохранить" class="btn btn-success" />
            </div>
        </div>
    </div>
}
<script type="text/javascript">
    $(function () {
        $('#datetimeFirstTenderFinish').datetimepicker({
            locale: 'ru',
            format: 'L',
            calendarWeeks: true,
            showTodayButton: true
        });
    });
</script>