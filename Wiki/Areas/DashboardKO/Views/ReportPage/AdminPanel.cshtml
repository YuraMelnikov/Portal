@{
    ViewBag.Title = "AdminPanel";
    Layout = "~/Areas/DashboardKO/Views/Shared/_LayoutDashboardKO2.cshtml";
}
<head>
    <link href="~/Areas/PZ/Contant/DataTable/DataTables-1.10.18/css/jquery.dataTables.css" rel="stylesheet" />
    <link href="~/Areas/PZ/Contant/DataTable/DataTables-1.10.18/css/dataTables.foundation.css" rel="stylesheet" />
    <script src="~/Areas/PZ/Contant/DataTable/DataTables-1.10.18/js/jquery.dataTables.js"></script>
    <script src="~/Areas/PZ/Contant/DataTable/DataTables-1.10.18/js/dataTables.foundation.js"></script>
    <link href="~/Areas/PZ/Contant/fixedColomnBootstrap/fixedColumns.bootstrap.min.css" rel="stylesheet" />
    <script src="~/Areas/PZ/Contant/fixedColomnBootstrap/dataTables.bootstrap.min.js"></script>
    <script src="~/Areas/PZ/Contant/fixedColomnBootstrap/dataTables.fixedColumns.min.js"></script>
    <script src="~/Areas/DashboardKO/Content/CRUDDashboardKO_UsersMonthPlan.js?v0.0"></script>
</head>
<div class="row">
    <div class="col-md-12">
        <table id="myTable" class="table table-hover table-striped" style="width:100%;"></table>
    </div>
</div>

<div id="userCardModal" class="modal modal-wide fade" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-1">
                        <label>Ид.:</label>
                        <input type="text" class="form-control" id="id" disabled="disabled" />
                    </div>
                    <div class="col-lg-3">
                        <label>ФИО сотрудника:</label>
                        <input type="text" class="form-control" id="userName"  disabled="disabled" />
                    </div>
                    <div class="col-lg-2">
                        <label>Период:</label>
                        <input type="text" class="form-control" id="period"  disabled="disabled" />
                    </div>
                    <div class="col-lg-1">
                        <label>Коэф.:</label>
                        <input type="text" class="form-control" id="coef" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-lg-2">
                        <button type="button" class="btn btn-primary" data-dismiss="modal"; onclick="update()">Сохранить</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Назад</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>