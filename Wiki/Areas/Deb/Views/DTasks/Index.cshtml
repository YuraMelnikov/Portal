@model Wiki.Debit_WorkBit
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Deb/Views/Shared/_LayoutDeb.cshtml";
}
<head>
    <script src="~/Areas/Deb/Contant/Tasks.js"></script>
    <style>
        .modal.modal-wide .modal-dialog {
            width: 90%;
        }
        .modal-wide .modal-body {
            overflow-y: auto;
        }
        .colu-200 {
            min-width: 200px;
        }
        .colu-300 {
            min-width: 300px;
        }
    </style>
</head>
<div class="row">
    <div class="col-md-12">
        <label>Ожидается оприходование изделия</label>
        <table id="myTable" class="table table-hover table-striped" style="width:100%;"></table>
    </div>
</div>
<div id="orderModal" class="modal modal-wide fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                @Html.HiddenFor(model => model.id)
                <div class="row">
                    <div class="col-lg-2">
                        <label for="PlanZakaz">Номер заказа:</label>
                        <input type="text" class="form-control" id="PlanZakaz" disabled="disabled" />
                    </div>
                    <div class="col-lg-2">
                        <label for="Manager">Менеджер заказа:</label>
                        <input type="text" class="form-control" id="Manager" disabled="disabled" />
                    </div>
                    <div class="col-lg-2">
                        <label for="Client">Заказчик:</label>
                        <input type="text" class="form-control" id="Client" disabled="disabled" />
                    </div>
                    <div class="col-lg-2">
                        <label for="dataOtgruzkiBP">Фактическая дата отгрузки:</label>
                        <input type="text" class="form-control" id="dataOtgruzkiBP" disabled="disabled" />
                    </div>
                    <div class="col-lg-2">
                        <label for="numberSF">Номер с/ф:</label>
                        <input type="text" class="form-control" id="numberSF" disabled="disabled" />
                    </div>
                    <div class="col-lg-2">
                        <label for="datePrihod">Фактическая дата доставки:</label>
                        <input type="text" class="form-control" id="datePrihod" disabled="disabled" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-2">
                        <label for="DateSupply">Договорная дата поставки:</label>
                        <input type="text" class="form-control" id="DateSupply" disabled="disabled" />
                    </div>
                    <div class="col-lg-2">
                        <label for="idReclamation">Наличие претензий:</label>
                        <input type="text" class="form-control" id="idReclamation" disabled="disabled" />
                    </div>
                    <div class="col-lg-2">
                        <label for="openReclamation">Дата получения претензии:</label>
                        <input type="text" class="form-control" id="openReclamation" disabled="disabled" />
                    </div>
                    <div class="col-lg-2">
                        <label for="closeReclamation">Дата закрытия претензии:</label>
                        <input type="text" class="form-control" id="closeReclamation" disabled="disabled" />
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-lg-2">
                        <label for="dateClose">Дата оприходования:</label>
                        @Html.EditorFor(model => model.dateClose, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                    <div class="col-lg-2">
                        <label for="closeId">Подтвердить оприходование:</label>
                        <br />
                        <input type="checkbox" checked="checked" id="closeId" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-2">&nbsp</div>
                </div>
                <div class="row">
                    <div class="col-lg-2">&nbsp</div>
                </div>
                <div class="row">
                    <div class="col-lg-2">&nbsp</div>
                </div>
                <div class="row">
                    <div class="col-lg-2">&nbsp</div>
                </div>
                <div class="row">
                    <div class="col-lg-2">&nbsp</div>
                </div>
                <div class="row">
                    <div class="col-lg-2">&nbsp</div>
                </div>
                <div class="row">
                    <div class="col-lg-2">&nbsp</div>
                </div>
                <div class="row">
                    <div class="col-lg-2">&nbsp</div>
                </div>
                <div class="row">
                    <div class="col-lg-2">&nbsp</div>
                </div>
                <div class="row">
                    <div class="col-lg-2">&nbsp</div>
                </div>
                <div class="row">
                    <div class="col-lg-2">&nbsp</div>
                </div>
                <div class="row">
                    <div class="col-lg-2">&nbsp</div>
                </div>
                <div class="row">
                    <div class="col-lg-2">&nbsp</div>
                </div>
                <div class="row">
                    <div class="col-lg-2">&nbsp</div>
                </div>
                <div class="row">
                    <div class="col-lg-2">&nbsp</div>
                </div>
                <div class="row">
                    <div class="col-lg-2">&nbsp</div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Добавить</button>
                <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Обновить</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Назад</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(function () {
        $('#dateClose').datetimepicker({
            locale: 'ru',
            format: 'L',
            calendarWeeks: true,
            showTodayButton: true
        });
    });
</script>