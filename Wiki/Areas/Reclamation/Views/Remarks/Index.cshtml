@model Wiki.Reclamation
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Reclamation/Views/Shared/_LayoutReclamationOTK.cshtml";
}
<head>
    <script src="~/Areas/Reclamation/Content/ReclamationList.js"></script>
</head>
<div class="row">
    <div class="col-md-12">
        <button type="button" class="btn-xs btn-primary" data-toggle="modal" data-target="#orderModal" onclick="clearTextBox();"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span></button>
        <table id="myTable" class="table table-hover table-striped" style="width:100%;">
            <tfoot>
                <tr>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
<div id="viewReclamation" class="modal modal-wide fade" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                @Html.HiddenFor(model => model.id)
                <div class="row">
                    <div class="col-lg-6">
                        <label>План-Заказ/ы №№:</label>
                        @Html.ListBox("pZ_PlanZakaz", ViewBag.PZ as MultiSelectList, new { @class = "chosen-select" })
                    </div>
                    <div class="col-lg-2">
                        <label>Тип рекламации:</label>
                        @Html.DropDownList("id_Reclamation_Type", ViewBag.id_Reclamation_Type as MultiSelectList, new { @class = "form-control" })
                    </div>
                    <div class="col-lg-2">
                        <label>Автор рекламации:</label>
                        <input type="text" class="form-control" id="id_AspNetUsersCreate" disabled="disabled" />
                    </div>
                    <div class="col-lg-2">
                        <label>Создана:</label>
                        <input type="text" class="form-control" id="dateTimeCreate" disabled="disabled" />
                    </div>
                </div>

                <br />
                <div class="row">
                    <div class="col-lg-2">
                        <label>Ответственное СП:</label>
                        @Html.DropDownList("id_DevisionReclamation", ViewBag.id_DevisionReclamation as MultiSelectList, new { @class = "form-control" })
                    </div>
                    <div class="col-lg-2">
                        <label>Ответственный сотрудник:</label>
                        @Html.DropDownList("id_AspNetUsersError", ViewBag.id_AspNetUsersError as MultiSelectList, new { @class = "form-control" })
                    </div>
                    <div class="col-lg-1">
                        <label>ГИП: </label>
                        <input type="checkbox" checked="checked" id="gip" />
                    </div>
                    <div class="col-lg-1">
                        <label>Перенаправить: </label>
                        <input type="checkbox" checked="checked" id="reload" />
                    </div>
                    <div class="col-lg-2">
                        <label>Перенаправить на:</label>
                        @Html.DropDownList("id_DevisionReclamationReload", ViewBag.id_DevisionReclamationReload as MultiSelectList, new { @class = "form-control" })
                    </div>
                    <div class="col-lg-2">
                        <label>Критерий ошибки:</label>
                        @Html.DropDownList("id_Reclamation_CountErrorFirst", ViewBag.id_Reclamation_CountErrorFirst as MultiSelectList, new { @class = "form-control" })
                    </div>
                    <div class="col-lg-2">
                        <label>Критерий ошибки (утв.):</label>
                        @Html.DropDownList("id_Reclamation_CountErrorFinal", ViewBag.id_Reclamation_CountErrorFinal as MultiSelectList, new { @class = "form-control" })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-6">
                        <label>Текст рекламации:</label>
                        @Html.TextAreaFor(model => model.text, htmlAttributes: new { @class = "form-control", @rows = 5 })
                    </div>
                    <div class="col-lg-6">
                        <label>Текст рекламации:</label>
                        @Html.TextAreaFor(model => model.description, htmlAttributes: new { @class = "form-control", @rows = 3 })
                        <div class="row">
                            <div class="col-lg-5">
                                <label>РСАМ: </label>
                                <input type="text" class="form-control" id="PCAM" />
                            </div>
                            <div class="col-lg-5">
                                <label>Полуфабрикат:</label>
                                @Html.ListBox("id_PF", ViewBag.PZ as MultiSelectList, new { @class = "chosen-select" })
                            </div>
                            <div class="col-lg-1">
                                <label>Доработка: </label>
                                <input type="checkbox" checked="checked" id="notReclamation" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-1">
                                <label>Закрыта: </label>
                                <input type="checkbox" checked="checked" id="closeDevision" />
                            </div>
                            <div class="col-lg-1">
                                <label>Закрыта ОТК: </label>
                                <input type="checkbox" checked="checked" id="close" />
                            </div>
                            <div class="col-lg-2">
                                <label>Время на поиск (ч.): </label>
                                <input type="text" class="form-control" id="timeToSearch" />
                            </div>
                            <div class="col-lg-2">
                                <label>Время на устранение (ч.): </label>
                                <input type="text" class="form-control" id="timeToEliminate" />
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-6">
                        <label>Ответ:</label>
                        @Html.TextAreaFor(model => model.text, htmlAttributes: new { @class = "form-control", @rows = 5 })
                    </div>
                    <div class="col-lg-6">
                        <label>История переписки:</label>
                        @Html.TextAreaFor(model => model.text, htmlAttributes: new { @class = "form-control", @rows = 5 })
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-lg-2">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Назад</button>
                    </div>
                    <div class="col-lg-8"></div>
                    <div class="col-lg-2">
                        <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Добавить</button>
                        <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Обновить</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Content/Chosen/chosen.jquery.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/Chosen/chosen.css")" rel="stylesheet" type="text/css" />
<script>
    $(".chosen-select").chosen({
        placeholder_text_multiple: "Нажмите для выбора...",
        no_results_text: 'Не найдено: ',
        allow_single_deselect: true, disable_search_threshold: 5, width: "100%"
    });
</script>
<script>
    $(".modal-wide").on("show.bs.modal", function () {
        var height = $(window).height() - 200;
        $(this).find(".modal-body").css("max-height", height);
    });
</script>