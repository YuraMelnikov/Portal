@model Wiki.Reclamation
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Reclamation/Views/Shared/_LayoutReclamationOTK.cshtml";
}
<head>
    <script src="~/Scripts/moment-with-locales.min.js"></script>
    <script src="~/Areas/Reclamation/Content/ReclamationList.js"></script>
    <link href="~/Content/Chosen/chosen.css" rel="stylesheet" />
    <script src="~/Content/Chosen/chosen.jquery.min.js"></script>
</head>
<div class="row">
    @{
        var counterDevision = ViewBag.CRUDCounter;
    }
    <div class="col-md-12">
        <button type="button" class="btn-xs btn-primary" data-toggle="modal" data-target="#viewReclamation" onclick=clearTextBox(@counterDevision)>
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </button>
        <table id="myTable" class="table table-hover table-striped" style="width:100%;">
            <tfoot>
                <tr>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
<div id="viewReclamation" class="modal modal-wide fade" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                @Html.HiddenFor(model => model.id)
                <div class="row">
                    <div class="col-lg-6">
                        <label>План-Заказ/ы №№:</label>
                        @Html.ListBox("pZ_PlanZakaz", ViewBag.PZ_PlanZakaz as MultiSelectList, new { @class = "chosen-select" })
                    </div>
                    <div class="col-lg-2">
                        <label>Тип рекламации:</label>
                        @Html.DropDownList("id_Reclamation_Type", ViewBag.id_Reclamation_Type as MultiSelectList, new { @class = "form-control" })
                    </div>
                    <div class="col-lg-2">
                        <label>Автор рекламации:</label>
                        <input type="text" class="form-control" id="id_AspNetUsersCreate" disabled="disabled" />
                    </div>
                    <div class="col-lg-1">
                        <label>Создана:</label>
                        <input type="text" class="form-control" id="dateTimeCreate" disabled="disabled" />
                    </div>
                    <div class="col-lg-1">
                        <label> ОТК закрыл :      .  </label>
                        <input type="checkbox" id="close" />
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-lg-3">
                        <label onclick="clearid_DevisionReclamation()">Ответственное СП (click - очистить): </label>
                        @Html.DropDownList("id_DevisionReclamation", ViewBag.id_DevisionReclamation as MultiSelectList, new { @class = "form-control" })
                    </div>
                    <div class="col-lg-3">
                        <label onclick="clearid_AspNetUsersError()">Ответственный сотрудник (click - очистить): </label>
                        @Html.DropDownList("id_AspNetUsersError", ViewBag.id_AspNetUsersError as MultiSelectList, new { @class = "form-control" })
                    </div>

                    <div class="col-lg-2">
                        <label>Критерий ошибки:</label>
                        @Html.DropDownList("id_Reclamation_CountErrorFirst", ViewBag.id_Reclamation_CountErrorFirst as MultiSelectList, new { @class = "form-control" })
                    </div>
                    <div class="col-lg-2">
                        <label>Критерий ошибки (утв.):</label>
                        @Html.DropDownList("id_Reclamation_CountErrorFinal", ViewBag.id_Reclamation_CountErrorFinal as MultiSelectList, new { @class = "form-control" })
                    </div>
                    <div class="col-lg-1">
                        <label>Поиск (ч.): </label>
                        <input type="text" class="form-control" id="timeToSearch" />
                    </div>
                    <div class="col-lg-1">
                        <label>Устранение (ч.): </label>
                        <input type="text" class="form-control" id="timeToEliminate" />
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-lg-6">
                        <label>Текст рекламации:</label>
                        @Html.TextAreaFor(model => model.text, htmlAttributes: new { @class = "form-control", @rows = 5 })
                    </div>
                    <div class="col-lg-6">
                        <label>Прим.:</label>
                        @Html.TextAreaFor(model => model.description, htmlAttributes: new { @class = "form-control", @rows = 2 })
                        <div class="row">
                            <div class="col-lg-5">
                                <label>Полуфабрикат:</label>
                                @Html.DropDownList("id_PF", ViewBag.id_PF as MultiSelectList, new { @class = "form-control" })
                            </div>
                            <div class="col-lg-5">
                                <label>РСАМ: </label>
                                <input type="text" class="form-control" id="PCAM" />
                            </div>
                            <div class="col-lg-2">
                                <label>Рекл. закрыта: </label>
                                <input type="checkbox" id="closeDevision" />
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-lg-6">
                        <label>Ответ:</label>
                        <textarea name="answerText" id="answerText" class="form-control" rows=8></textarea>
                    </div>
                    <div class="col-lg-6">
                        <label>История переписки:</label>
                        <textarea name="answerHistiryText" id="answerHistiryText" class="form-control" rows=8></textarea>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-lg-1">
                        <label>Перенаправить: </label>
                    </div>
                    <div class="col-lg-1">
                        @Html.DropDownList("reloadDevision", ViewBag.id_DevisionReclamationReload as MultiSelectList, new { @class = "form-control" })
                    </div>
                    <div class="col-lg-1">
                        <input type="checkbox" id="reload" />
                    </div>
                    <div class="col-lg-1">
                        <label>Исправить ПО: </label>
                    </div>
                    <div class="col-lg-1">
                        @Html.DropDownList("editManufacturingIdDevision", ViewBag.DevisionsManufacturing as MultiSelectList, new { @class = "form-control" })
                    </div>
                    <div class="col-lg-1">
                        <input type="checkbox" id="editManufacturing" />
                    </div>
                    <div class="col-lg-2">
                        <label>На техсовет: </label>
                        <input type="checkbox" id="technicalAdvice" />
                    </div>
                    <div class="col-lg-2">
                        <label>ГИП: </label>
                        <input type="checkbox" id="gip" />
                    </div>
                    <div class="col-lg-2">
                        <label>Шум: </label>
                        <input type="checkbox" id="trash" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col-lg-2">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Назад</button>
                    </div>
                    <div class="col-lg-8"></div>
                    <div class="col-lg-2">
                        <button type="button" class="btn btn-primary" id="btnAdd" onclick="return Add();">Добавить</button>
                        <button type="button" class="btn btn-primary" id="btnUpdate" style="display:none;" onclick="Update();">Обновить</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(".modal-wide").on("show.bs.modal", function () {
        var height = $(window).height() - 200;
        $(this).find(".modal-body").css("max-height", height);
    });
</script>

<script>
    $(".chosen-select").chosen({
        placeholder_text_multiple: "Нажмите для выбора...",
        allow_single_deselect: true, disable_search_threshold: 5, width: "100%"
    });
</script>